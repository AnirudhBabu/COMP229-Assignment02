<%- include('../partials/header.ejs') -%>
    <%- include('../partials/main_nav.ejs')-%>

    <main class="container">
        <hi class="display-4">Business Contacts</hi><br>
        <hr>
        <br>
        <div class="row justify-content-md-center">            
            <div class="col-10">  
                <table class="table table-striped table-bordered">
                    <thead class="purple table-dark">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Contact Number</th>
                            <th scope="col">Email</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
        
                        <% for(let count=0; count < contacts.length; count++) { %>
        
                        <tr>
                            <td class="text-center"><%= contacts[count].contactName %></td>
                            <td class="text-center"><%= contacts[count].contactNumber %></td>
                            <td class="text-center"><%= contacts[count].email %></td>
                            <td class="text-center">
                                <a href="/contact-list/edit/<%= contacts[count]._id %>" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Edit</a>
                            </td>
                            <td class="text-center">
                                <a href="/contact-list/delete/<%= contacts[count]._id %>" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                        </tr>                    
                    <% } %>
        
                    </tbody>
                </table>
    
            </div>
        </div>
    </main>


    <%- include('../partials/bottom_nav.ejs')-%>
<%- include('../partials/footer.ejs') -%>
